    <script>
        // New simplified list of departments
        const allDepartments = [
            "CS",
            "IT", 
            "AI",
            "IOT",
            "Electrical",
            "Electronics",
            "MAC",
            "CE",
            "ME",
            "Chemical",
            "ARCH"
        ];
        
        // Track which departments have been used and in which role
        let departmentStatus = {};
        
        // Initialize department status
        allDepartments.forEach(dept => {
            departmentStatus[dept] = {
                forUsed: false,
                againstUsed: false
            };
        });
        
        // Store assignment history
        let assignmentHistory = [];
        
        // Display the departments when the page loads
        window.onload = function() {
            displayDepartments();
        };
        
        function displayDepartments() {
            const departmentsDisplay = document.getElementById('departmentsDisplay');
            departmentsDisplay.innerHTML = '';
            
            allDepartments.forEach(dept => {
                const departmentElement = document.createElement('div');
                departmentElement.className = 'department-item';
                
                const status = departmentStatus[dept];
                
                // Add appropriate classes based on usage
                if (status.forUsed && status.againstUsed) {
                    departmentElement.classList.add('both-used');
                } else if (status.forUsed) {
                    departmentElement.classList.add('for-used');
                } else if (status.againstUsed) {
                    departmentElement.classList.add('against-used');
                }
                
                departmentElement.textContent = dept;
                departmentsDisplay.appendChild(departmentElement);
            });
            
            // Check if there are enough departments for another round
            const availableForSelection = checkAvailableDepartments();
            
            // Update select button state
            document.getElementById('selectButton').disabled = availableForSelection.length < 2;
            
            // Show warning if not enough departments
            document.getElementById('noMoreDepartments').style.display = 
                availableForSelection.length < 2 ? 'block' : 'none';
        }
        
        function checkAvailableDepartments() {
            // We need at least one department that hasn't been used for "for" position
            // and at least one different department that hasn't been used for "against" position
            const forAvailable = allDepartments.filter(dept => !departmentStatus[dept].forUsed);
            const againstAvailable = allDepartments.filter(dept => !departmentStatus[dept].againstUsed);
            
            // If we have enough departments of each type and they can be different
            const canSelect = (forAvailable.length > 0 && againstAvailable.length > 0 && 
                             (forAvailable.length > 1 || againstAvailable.length > 1 || 
                              forAvailable[0] !== againstAvailable[0]));
            
            // Return an array of departments that are available for selection
            return canSelect ? 
                forAvailable.filter(dept => againstAvailable.some(d => d !== dept)) : [];
        }
        
        function assignDepartments() {
            // Check if there are enough available departments
            const availableForSelection = checkAvailableDepartments();
            
            if (availableForSelection.length < 2) {
                alert("वाद-विवाद के लिए पर्याप्त विभागों के उम्मीदवार नहीं बचे हैं!");
                return;
            }
            
            // Get departments available for "for" and "against" roles
            const forAvailable = allDepartments.filter(dept => !departmentStatus[dept].forUsed);
            const againstAvailable = allDepartments.filter(dept => !departmentStatus[dept].againstUsed);
            
            // Randomly select a department for "for" position
            let forDept;
            let againstDept;
            
            // Try to find a valid pair
            do {
                forDept = forAvailable[Math.floor(Math.random() * forAvailable.length)];
                
                // Filter out the forDept from against candidates to avoid same department match
                const validAgainstCandidates = againstAvailable.filter(dept => dept !== forDept);
                
                // If no valid against candidates, we need to try a different for department
                if (validAgainstCandidates.length === 0) {
                    continue;
                }
                
                againstDept = validAgainstCandidates[Math.floor(Math.random() * validAgainstCandidates.length)];
                
                // If we found both departments, break the loop
                break;
                
            } while (true);
            
            // Update department status
            departmentStatus[forDept].forUsed = true;
            departmentStatus[againstDept].againstUsed = true;
            
            // Display results
            document.getElementById('forDepartment').textContent = forDept;
            document.getElementById('againstDepartment').textContent = againstDept;
            document.getElementById('forDepartmentName').textContent = forDept;
            document.getElementById('againstDepartmentName').textContent = againstDept;
            document.getElementById('results').style.display = 'block';
            
            // Add to history
            const timestamp = new Date().toLocaleString('hi-IN');
            assignmentHistory.unshift({
                forDepartment: forDept,
                againstDepartment: againstDept,
                timestamp
            });
            
            // Update display
            displayDepartments();
            updateHistoryDisplay();
        }
        
        function updateHistoryDisplay() {
            const historyContainer = document.getElementById('history');
            const historyList = document.getElementById('historyList');
            
            if (assignmentHistory.length > 0) {
                historyContainer.style.display = 'block';
                
                // Clear previous history
                historyList.innerHTML = '';
                
                // Add each history item
                assignmentHistory.forEach((item, index) => {
                    const historyItem = document.createElement('div');
                    historyItem.className = 'history-item';
                    historyItem.innerHTML = `
                        <strong>${item.timestamp}</strong><br>
                        ${item.forDepartment} (पक्ष) बनाम ${item.againstDepartment} (विपक्ष)
                    `;
                    historyList.appendChild(historyItem);
                });
            }
        }
        
        function resetCompetition() {
            // Reset department status
            allDepartments.forEach(dept => {
                departmentStatus[dept] = {
                    forUsed: false,
                    againstUsed: false
                };
            });
            
            // Hide results
            document.getElementById('results').style.display = 'none';
            document.getElementById('noMoreDepartments').style.display = 'none';
            
            // Clear history
            assignmentHistory = [];
            document.getElementById('history').style.display = 'none';
            
            // Update display
            displayDepartments();
            
            // Confirmation message
            alert("प्रतियोगिता सफलतापूर्वक रीसेट कर दी गई है। सभी विभाग अब उपलब्ध हैं।");
        }
    </script>
</body>
</html>
